<?xml version="1.0" standalone=no>
<config>
	<properties>
		<!-- Could just have <prop type="x" value="y"/>, makes reading values a bit cleaner -->
		<movieDataPath type="string">/Users/gameover/Desktop/StrangerDanger/video</movieDataPath>

		<shaderVertPath type="string">vertex</shaderVertPath>
		<shaderFragPath type="string">multitexturemerge</shaderFragPath>
		<shaderGammaCorrection type="float">2.0</shaderGammaCorrection>
		<shaderBlendRatio type="float">0.5</shaderBlendRatio>

		<!-- probably would have video width + app width? -->
		<width type="float">1280</width>
		<height type="float">720</height>
		
		<showDebugView type="bool">true</showDebugView>

		<!-- log level, int or string? -->
		
	</properties>
	<scenes>
		<scene name="t">
			<sequence name="seq01a" nextSequence="seq02a">
			<!-- 
				Should have a nextSequence=".." here? makes things a bit more flexible (loading screens or something?
